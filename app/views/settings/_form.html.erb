<div class="panel panel-default">
  <div class="panel-heading" data-toggle="collapse" data-target="#settings">
    <h3 class="panel-title"><%= object.class.name.underscore.humanize.titleize %> EAD Settings<span class="caret"></span></h3>
  </div>
  <% shown ||= false %>
  <div id="settings" class="panel-body <%= shown ? '' : 'collapse' %>">
    <%= form_for [object, object.setting], format: :json, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :link_text %>
        <%= f.text_field :link_text, class: 'form-control' %>
      </div>
      <div class="checkbox">
        <%= f.label :thumbnails %>
        <%= f.check_box :thumbnails %>
      </div>
      <div class="form-group">
        <%= f.label :thumbnail_url %>
        <%= f.url_field :thumbnail_url, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
