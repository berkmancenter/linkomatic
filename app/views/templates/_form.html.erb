<%= form_for @template do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 12 %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
