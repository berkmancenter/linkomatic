<h1>Finding Aids by Project</h1>
<ul class="list-unstyled">
  <% current_user.projects.order(:created_at).each do |project| %>
    <li>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title"><%= project.name %> <small><%= link_to 'Edit', edit_project_path(project) %></small></h2>
      </div>
      <div class="panel-body">
        <ul>
          <% project.finding_aids.order(:created_at).each do |finding_aid| %>
            <li><%= link_to finding_aid.name, edit_finding_aid_path(finding_aid) %></li>
        <% end %>
        </ul>
        <%= link_to 'New Finding Aid', new_project_finding_aid_path(project) %>
      </div>
    </div>
    </li>
  <% end %>
</ul>
<%= link_to 'New Project', new_project_path %>

